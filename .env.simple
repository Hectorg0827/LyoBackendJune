# Simple Production Environment Configuration
# SQLite-based configuration for simple cloud deployment

# Environment
ENVIRONMENT=production
DEBUG=false

# Database - SQLite for simplicity
DATABASE_URL=sqlite:///lyo_app_prod.db

# Redis (optional - will fallback to in-memory if not available)
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-super-secret-key-that-should-be-very-long-and-random
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-jwt-secret-key-that-should-be-very-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server
PORT=8000
HOST=0.0.0.0

# CORS - Allow all for simple deployment
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO

# AI Configuration (optional)
GOOGLE_API_KEY=your-production-google-api-key
GEMINI_API_KEY=your-gemini-api-key

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# Monitoring (disabled for simple deployment)
ENABLE_METRICS=false

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-production-project-id
CLOUD_RUN_SERVICE=lyobackend-simple
CLOUD_RUN_REGION=us-central1

# OpenTelemetry (Phase 3 - optional)
OTEL_SERVICE_NAME=lyobackend-simple
OTEL_TRACES_EXPORTER=console
