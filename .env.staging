# Staging environment variables for LyoApp backend

# Database
POSTGRES_USER=lyo_user
POSTGRES_PASSWORD=lyo_password
POSTGRES_DB=lyo_db
DATABASE_URL=postgresql+asyncpg://lyo_user:lyo_password@db:5432/lyo_db

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT
SECRET_KEY=your-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@lyoapp.com

# Sentry (optional)
SENTRY_DSN=

# Application
# Staging Environment Configuration
# This file contains staging-specific settings

# Environment
ENVIRONMENT=staging
DEBUG=false

# Database - STAGING ONLY (PostgreSQL required)
DATABASE_URL=postgresql+asyncpg://lyo_user:lyo_password@db:5432/lyo_staging

# Redis
REDIS_URL=redis://redis:6379/0

# Security - CHANGE THESE IN STAGING
SECRET_KEY=CHANGE-THIS-IN-STAGING-super-secret-key-that-should-be-very-long-and-random
JWT_SECRET_KEY=CHANGE-THIS-IN-STAGING-jwt-secret-key-that-should-be-very-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
PORT=8000
HOST=0.0.0.0

# CORS - STAGING ONLY
CORS_ORIGINS=["https://staging.yourdomain.com","https://app-staging.yourdomain.com"]

# Logging
LOG_LEVEL=INFO

# AI Configuration
GOOGLE_API_KEY=your-staging-google-api-key
MODEL_ID=google/gemma-2b-it

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Monitoring
SENTRY_DSN=your-staging-sentry-dsn
ENABLE_METRICS=true

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-staging-project-id
CLOUD_RUN_SERVICE=lyobackend-staging
CLOUD_RUN_REGION=us-central1
 
# LLM (Gemma 4n)
LLM_ENDPOINT=http://localhost:11434/api/generate
LLM_MODEL=gemma:4n
