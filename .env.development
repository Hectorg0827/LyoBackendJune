# Development Environment Configuration
# This file contains development-specific settings

# Environment
ENVIRONMENT=development
DEBUG=true

# Database - DEVELOPMENT ONLY (SQLite for local development)
DATABASE_URL=sqlite+aiosqlite:///./lyo_app_dev.db

# Redis (optional for development)
REDIS_URL=redis://localhost:6379/0

# Security - DEVELOPMENT ONLY (use simple keys for dev)
SECRET_KEY=dev-secret-key-for-development-only
JWT_SECRET_KEY=dev-jwt-secret-key-for-development-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
PORT=8000
HOST=127.0.0.1

# CORS - DEVELOPMENT ONLY
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]

# Logging
LOG_LEVEL=DEBUG

# AI Configuration (optional for development)
GOOGLE_API_KEY=your-dev-google-api-key
MODEL_ID=google/gemma-2b-it

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Monitoring (disabled for development)
SENTRY_DSN=
ENABLE_METRICS=false

# Google Cloud (optional for development)
GOOGLE_CLOUD_PROJECT=your-dev-project-id
CLOUD_RUN_SERVICE=lyobackend-dev
CLOUD_RUN_REGION=us-central1
