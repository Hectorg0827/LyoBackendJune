# Test Environment Configuration
# This file contains test-specific settings

# Environment
ENVIRONMENT=test
DEBUG=false

# Database - TEST ONLY (SQLite for fast testing)
DATABASE_URL=sqlite+aiosqlite:///./test_lyo_app.db

# Redis (optional for testing)
REDIS_URL=redis://localhost:6379/0

# Security - TEST ONLY (use simple keys for tests)
SECRET_KEY=test-secret-key-for-testing-only
JWT_SECRET_KEY=test-jwt-secret-key-for-testing-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
PORT=8001
HOST=127.0.0.1

# CORS - TEST ONLY
CORS_ORIGINS=["http://localhost:3000","http://localhost:8001"]

# Logging
LOG_LEVEL=WARNING

# AI Configuration (disabled for testing)
GOOGLE_API_KEY=
MODEL_ID=

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./test_uploads

# Monitoring (disabled for testing)
SENTRY_DSN=
ENABLE_METRICS=false

# Google Cloud (disabled for testing)
GOOGLE_CLOUD_PROJECT=
CLOUD_RUN_SERVICE=
CLOUD_RUN_REGION=
