# .env.unified.template
# Environment variables template for LyoBackend unified architecture
# Copy this file to .env and fill in the values

# Environment: development, staging, or production
ENV=development

# Application settings
PORT=8000
SECRET_KEY=your-super-secret-key-replace-me
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database settings
# For production/staging: Use PostgreSQL
# Example: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://lyoapp:lyopassword@db:5432/lyoapp_db

# For development only: Can use SQLite
# DATABASE_URL=sqlite:///./lyo_app_dev.db

# PostgreSQL specific settings (used by docker-compose)
POSTGRES_USER=lyoapp
POSTGRES_PASSWORD=lyopassword
POSTGRES_DB=lyoapp_db
POSTGRES_PORT=5432

# Redis settings
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Docker settings
TAG=latest

# JWT Authentication settings
JWT_SECRET_KEY=your-jwt-secret-replace-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cloud settings (for deployment to cloud providers)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
CLOUD_REGION=us-central1
SERVICE_NAME=lyobackend-unified
