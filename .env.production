# Production Environment Configuration
# This file contains production-specific settings

# Environment
ENVIRONMENT=production
DEBUG=false

# Database - PRODUCTION ONLY (PostgreSQL required)
DATABASE_URL=postgresql+asyncpg://lyo_user:lyo_password@db:5432/lyo_production

# Redis
REDIS_URL=redis://redis:6379/0

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-super-secret-key-that-should-be-very-long-and-random
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-jwt-secret-key-that-should-be-very-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
PORT=8000
HOST=0.0.0.0

# CORS - PRODUCTION ONLY
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# Logging
LOG_LEVEL=WARNING

# AI Configuration
GOOGLE_API_KEY=your-production-google-api-key
MODEL_ID=google/gemma-2b-it

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Monitoring
SENTRY_DSN=your-production-sentry-dsn
ENABLE_METRICS=true

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-production-project-id
CLOUD_RUN_SERVICE=lyobackend-unified
CLOUD_RUN_REGION=us-central1
